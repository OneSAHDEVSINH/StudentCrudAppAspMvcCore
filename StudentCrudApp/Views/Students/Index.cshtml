@model IEnumerable<StudentCrudApp.Models.Student>
@{
    ViewData["Title"] = "Students";
    var modalData = ViewData["ModalData"] as Student;
    var modalPartial = ViewData["ModalPartial"] as string;
}


<h2>Students</h2>

